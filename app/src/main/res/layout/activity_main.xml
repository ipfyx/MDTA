<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back"
        android:text="Scan your device for malware
and spyware applications."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/customScanButton"
        style="@style/ButtonText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_blue"
        android:text="CUSTOM SCAN" />


    <Button
        android:id="@+id/scanSpecificApp"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/customScanButton"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_blue"
        android:text="SCAN SPECIFIC APP" />

    <Button
        android:id="@+id/scanAllSystem"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/scanSpecificApp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_blue"
        android:text="SCAN WHOLE SYSTEM" />

    <Button
        android:id="@+id/scanApplications"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/scanAllSystem"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_blue"
        android:text="SCAN APPLICATIONS" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_below="@id/title"
        android:layout_above="@id/scanApplications" />
</RelativeLayout>